rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      // Allow any authenticated user to read public profile data
      allow read: if isSignedIn();

      // Only the owner can create or update their profile
      allow create, update: if isSignedIn() && request.auth.uid == userId;

      // Followers subcollection
      match /followers/{followerId} {
        // Owner can read their own followers list
        allow read: if isSignedIn() && request.auth.uid == userId;
        // Follower can add/remove themselves from the list
        allow create, delete: if isSignedIn() && request.auth.uid == followerId;
      }
    }

    // Lineups collection
    match /lineups/{lineupId} {
      // Anyone can read lineups
      allow read: if true;
      // Only authenticated users can create lineups
      allow create: if isSignedIn();
      // Only the creator can update/delete their lineups
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.creatorId;
    }
  }
}
