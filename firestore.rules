rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      // Allow any authenticated user to read public profile data
      allow read: if isSignedIn();

      // Only the owner can create or freely update their profile
      allow create, update: if isSignedIn() && request.auth.uid == userId;

      // Followers list is managed by followers themselves
      match /followers/{followerId} {
        // Only the profile owner can read their followers
        allow read: if isSignedIn() && request.auth.uid == userId;
        // Only the follower can add/remove their record
        allow write: if isSignedIn() && request.auth.uid == followerId;
      }

      // Allow other authenticated users to bump follower counts safely
      allow update: if isSignedIn()
        && request.auth.uid != userId
        && request.resource.data.diff(resource.data).changedKeys().hasOnly(['followers', 'updatedAt']);
    }
  }
}
